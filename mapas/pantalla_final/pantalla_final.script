local url_de_camara = "/camera"
function init(self)
	self.label_text = "Has llegado al final de esta peque√±a demo.\nGracias por jugar"
	
	msg.post(url_de_camara, "use_projection", { projection = hash("FIXED_AUTO") })
	msg.post(url_de_camara, "zoom_to", {zoom = 3.5})

	go.set("/mandinga#sprite", "tint.w", 0)
	go.animate("/mandinga#sprite", "tint.w", go.PLAYBACK_ONCE_FORWARD, 1, go.EASING_LINEAR, 5,0, 
	function()
		label.set_text("/mandinga#label",self.label_text)
	end
	)
end

