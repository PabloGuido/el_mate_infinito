	if message_id == hash("player_interactuando_con_objeto") then
		if inventario.ofrenda_del_anciano == true then
			datos.player_puede_romeper_rocas = true
			self.objeto = {"Has dejado una ofrenda al gauchito. \n Ã‰l te concede el poder de \n romper rocas con tu salto largo. "}
			interactuar_con_gui (self)
		else
			interactuar_con_gui (self)
		end
	elseif message_id == hash("objeto_recolectado_por_player") then
		inventario.ofrenda_pombero_1 = true
		go.delete()
	end
end

